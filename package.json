{
    "name": "acsl-lite",
    "displayName": "ACSL-Lite",
    "description": "Lite ACSL language support for Visual Studio Code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.65.0"
    },
    "publisher": "mister_zurg",
    "author": {
        "name": "Denis Zakharov"
    },
    "repository": {
        "type": "git",
        "url" : "https://github.com/MisterZurg/acsl-lite"
    },
    "bugs": {
        "url": "https://github.com/MisterZurg/issues"
    },
    "icon": "media/acsl-lite-logo.png",
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "acsl",
            "aliases": ["ACSL Lite", "acsl"],
            "extensions": [".c",".cpp"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "acsl",
            "scopeName": "source.acsl",
            "path": "./syntaxes/acsl.tmLanguage.json"
        }]
    }
}